{
  "name": "cerises-ui",
  "version": "0.0.1",
  "description": "A modern solidjs based UI library ~ it is very lightweight!",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "serve": "vite preview"
  },
  "keywords": [
    "cerises-ui",
    "component library",
    "ui framework",
    "ui",
    "solidjs"
  ],
  "main": "lib/index.js",
  "homepage": "https://github.com/cerises-ui/cerises-ui",
  "repository": {
    "type": "git",
    "url": "git@github.com:cerises-ui/cerises-ui.git"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.tsx": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.vue": [
      "prettier --parser=vue --write",
      "eslint --fix"
    ],
    "*.css": [
      "prettier --write"
    ],
    "*.md": [
      "prettier --write --parser markdown --prose-wrap never",
      "eslint --fix"
    ]
  },
  "files": [
    "es",
    "lib",
    "web-types.json",
    "README.md"
  ],
  "author": "Yorksh1re",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.2",
    "jsdom": "^19.0.0",
    "sass": "^1.49.9",
    "solid-testing-library": "^0.3.0",
    "typescript": "^4.6.2",
    "vite": "^2.8.6",
    "vite-plugin-solid": "^2.2.6",
    "vite-plugin-windicss": "^1.8.3",
    "solid-app-router": "^0.3.1",
    "vitest": "^0.6.0"
  },
  "dependencies": {
    "solid-js": "^1.3.12"
  }
}
